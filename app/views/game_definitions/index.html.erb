<div class ="page-header">
  <h1>Game Definitions</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Version</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @game_definitions.each do | game_definition | %>
    <tr>
      <td><%= game_definition.name %></td>
      <td><%= game_definition.author %></td>
      <td><%= game_definition.version %></td>
      <td>
        <%= link_to content_tag(:i, "", class: "icon-pencil icon-white") + " Edit",
          edit_game_definition_path(game_definition), :method => :get, :class => 'btn btn-margin btn-success' %>

        <%= link_to content_tag(:i, "", class: "icon-trash icon-white") + " Destroy",
        game_definition_path(game_definition), :method => :delete,
        :data => { :confirm => 'Are you sure you want to delete this game definition?' },
        :class => 'btn btn-danger btn-margin' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "New Game Definition", new_game_definition_path, :class => 'btn btn-primary' %>
